<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20170622_ブラシとMultiBinding_Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
  <Grid Margin="5,30,5,0">
    <StackPanel>
      <Border Name="MyBorder" Width="200" Height="50"/>
      <Button Name="btSetColor1" Content="SolidColorBrush(255, 180, 50)"/>
      <Button Name="btSetColor2" Content="BrushesAlicBlue"/>
      <Button Name="btSetColor3" Content="Red=200"/>
      <Slider Name="sldR" Minimum="0" Maximum="255" SnapsToDevicePixels="True" TickFrequency="1" IsMoveToPointEnabled="True"/>
      <Slider Name="sldG" Minimum="0" Maximum="255" SnapsToDevicePixels="True" TickFrequency="1" IsMoveToPointEnabled="True"/>
      <Slider Name="sldB" Minimum="0" Maximum="255" SnapsToDevicePixels="True" TickFrequency="1" IsMoveToPointEnabled="True"/>
    </StackPanel>
  </Grid>
</Window>
