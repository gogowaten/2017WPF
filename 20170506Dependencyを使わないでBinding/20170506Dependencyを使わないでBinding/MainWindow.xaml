<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20170506Dependencyを使わないでBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
    <Canvas Name="MyCanvas">
      <StackPanel Name="MyStackPanel" Width="210" Margin="10">
        <Button Name="btnCheck" Content="Check"/>
        <Border Background="Tomato" Height="1" Margin="0,15,0,5"/>
        <TextBlock Name="tbAngle" Text="Angle"/>
        <Slider Name="sldAngle" Maximum="360"/>
        <Button Name="btnSetRotateAngle" Content="RotateTransform.Angle=20"/>
        <Border Background="Tomato" Height="1" Margin="0,15,0,5"/>
        <TextBlock Name="tbSkewX" Text="SkewX"/>
        <Slider Name="sldSkewX" Minimum="-90" Maximum="90"/>
        <Button Name="btnSetSkewX" Content="TargetThumb.SkewX=30"/>
        <Border Background="Tomato" Height="1" Margin="0,15,0,5"/>
        <TextBlock Name="tbScale" Text="ScaleX"/>
        <Slider Name="sldScaleX" Minimum="-3" Maximum="3"/>
        <Button Name="btnSetScaleX" Content="TargetThumb.ScaleX=2"/>
      </StackPanel>
    </Canvas>
  </Grid>
</Window>
