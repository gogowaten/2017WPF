<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Line描画アンチエイリアス"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="525">
  <Grid>
    <TextBlock Text="左右それぞれのStackPanelにLineを表示" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20"/>
    <TextBlock Text="ボタンでStackPanelのEdgeMode変更" HorizontalAlignment="Center" Margin="0,40,0,0" FontSize="20"/>
    <StackPanel Orientation="Horizontal" Margin="0,70,0,0" HorizontalAlignment="Center">
      <StackPanel Name="MyStackP1" Margin="5,0,0,5" Background="Azure">
        <TextBlock Text="左StackPanel"/>
        <TextBlock Text="LineのEdgeMode = Unspecified"/>
      </StackPanel>
      <StackPanel Name="MyStackP2" Margin="5,0,0,5" Background="PeachPuff">
        <TextBlock Text="右StackPanel"/>
        <TextBlock Text="LineのEdgeMode = Aliased"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>
